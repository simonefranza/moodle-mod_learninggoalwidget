{{!
    @template mod_learninggoalwidget/widget/sunburst-view

    Renders the sunburst visualisation of learning goals
    This template is not for use within moodle.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * courseid
    * coursemoduleid
    * instanceid

    Example context (json):
    {
        "courseid": "1",
        "coursemoduleid": "2",
        "instanceid": "3"
    }
}}
<div id="taxonomy-view-{{{courseid}}}-{{{coursemoduleid}}}-{{{instanceid}}}" data-region="learninggoals-sunburst-{{{courseid}}}-{{{coursemoduleid}}}-{{{instanceid}}}-content-view" style="display: inline-block;">
    <div id="learninggoals-sunburst-{{{courseid}}}-{{{coursemoduleid}}}-{{{instanceid}}}-taxonomy-content" class="tabcontent">
		<div id="learninggoals-sunburst-{{{courseid}}}-{{{coursemoduleid}}}-{{{instanceid}}}-taxonomy-wrapper">
			<div id="learninggoals-sunburst-{{{courseid}}}-{{{coursemoduleid}}}-{{{instanceid}}}-taxonomy"></div>
		</div>
    </div>
</div>
