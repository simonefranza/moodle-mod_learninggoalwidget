{{!
    @template mod_learninggoalwidget/editor/goalmodalview

    Renders the modal view for editing a goal
    This template is not for use within moodle.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * topiclabel
    * topictitle
    * title
    * shortname
    * weburl
    * goaltitle
    * goalshortname
    * goalurl

    Example context (json):
    {
        "topiclabel": "Themenbereich",
        "topictitle": "Einf√ºhrung in die Artificial Intelligence",
        "title": "Titel",
        "shortname": "Kurzbezeichnung",
        "weburl": "Web-Adresse",
        "goaltitle": "Grundlagen der AI",
        "goalshortname": "bai",
        "goalurl": "http://orf.at"
    }
}}
<div class="form-group row fitem">
    <div class="col-md-3">
        <label class="col-form-label d-inline">
            {{topiclabel}}
        </label>
    </div>
    <div class="col-md-3">
        <label class="col-form-label d-inline">
            {{topictitle}}
        </label>
    </div>
</div>

<div class="form-group row fitem">
    <div class="col-md-3">
        <label class="col-form-label d-inline">
            {{title}}
        </label>
    </div>
    <div class="col-md-9 form-inline felement" data-fieldtype="text">
        <input type="text" class="form-control" name="itemtitle" data-action="itemtitle" value="{{goaltitle}}">
        <div id="goaltitle_invalid_feedback" class="invalid-feedback" data-action="titlefeedback"></div>
   </div>
</div>

<div class="form-group row fitem">
    <div class="col-md-3">
        <label class="col-form-label d-inline">
            {{shortname}}
        </label>
    </div>
    <div class="col-md-9 form-inline felement" data-fieldtype="text">
        <input type="text" class="form-control" name="shortname" data-action="itemshortname" value="{{goalshortname}}" maxlength="100">
    </div>
</div>

<div class="form-group row fitem">
    <div class="col-md-3">
        <label class="col-form-label d-inline">
            {{weburl}}
        </label>
    </div>
    <div class="col-md-9 form-inline felement" data-fieldtype="text">
        <input type="text" class="form-control" name="itemurl" data-action="itemurl" value="{{goalurl}}">
        <div id="topicurl_invalid_feedback" class="invalid-feedback" data-action="urlfeedback"></div>
    </div>
</div>
